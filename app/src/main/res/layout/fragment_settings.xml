<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor">
    <Switch
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toggle_theme"
        android:textColor="?attr/txtColor"
        android:id="@+id/switch_theme"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textColor="?attr/txtColorDone"
        android:layout_below="@id/switch_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toggle_theme_desc"
        android:layout_alignStart="@id/switch_theme"/>

</RelativeLayout>